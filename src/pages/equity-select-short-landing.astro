---
import LandingLayout from "../layouts/LandingLayout.astro";
import { heroImageAssignments } from "../data/imageAssignments";

const hero = heroImageAssignments.equitySelectLandingHero;

const pageData = {
  path: "/equity-select-short-landing",
  title: "Short-Form HELOC Landing Page | Cliff Mortgages",
  h1: "Use Your Home Equity For What Matters Now",
  description:
    "A streamlined HELOC-style option to access up to 89.99% of your home's value without touching a low-rate first mortgage. Compare scenarios, confirm payments, and keep your budget predictable.",
  seoDescription:
    "Paid-traffic landing page for HELOC-style EquitySelect inquiries. Fast closings, predictable payments, and no obligation quotes for Colorado homeowners.",
  seoImageUrl: hero.src,
  breadcrumbs: [
    { name: "Home", path: "/" },
    {
      name: "EquitySelect Short Landing",
      path: "/equity-select-short-landing",
    },
  ],
  faqs: [],
};

const cashUses = [
  "Bill consolidation (pay off high-interest debts)",
  "Home improvements",
  "Dream vacation",
  "Cash for any purpose",
];

const proofPoints = [
  "No Mortgage Insurance Required",
  "Save with lower wholesale pricing",
  "Fixed 30-year rates for stability and peace of mind",
  "Borrow more: Access up to 89.99% of your home's value (vs. the standard 80%)",
  "Local expert guidance from licensed Colorado mortgage professionals",
  "Perfect to pay off high-interest credit cards, student loans, or renovations",
  "Close fast: average closing in just 20 days",
];
---

<LandingLayout pageData={pageData} footerVariant="landing-page-footer-varient">
  <section class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-[minmax(0,1fr)_500px] gap-10">
        <div class="space-y-6">
          <div>
            <p
              class="text-sm font-semibold uppercase tracking-wide text-[#bf9f5c]"
            >
              Use your home equity for things you need.
            </p>
            <h1 class="mt-2 text-3xl md:text-4xl font-bold text-gray-900">
              We can help with a no-hassle cash-out up to 89.99% of value.
            </h1>
            <p class="mt-4 text-base text-gray-600">
              Unlock a HELOC-style line without refinancing out of today’s low
              rates. Get cash for projects, consolidate debt, or plan ahead with
              predictable payments backed by a local broker.
            </p>
            <div class="mt-6 lg:hidden">
              <a
                href="#short-form"
                class="inline-flex w-full items-center justify-center rounded-lg bg-[#bf9f5c] px-6 py-3 text-base font-semibold text-white shadow-md"
                data-scroll-form
              >
                See My Rate Options
              </a>
            </div>
          </div>

          <div
            class="rounded-2xl border border-gray-200 bg-gray-50/70 p-5 shadow-sm"
          >
            <h2 class="text-2xl font-semibold text-gray-900">
              Use your cash for:
            </h2>
            <ul class="mt-4 space-y-3 text-gray-700">
              {
                cashUses.map((item) => (
                  <li class="flex items-start gap-2">
                    <i class="fa-solid fa-circle-check text-[#bf9f5c] mt-1" />
                    <span class="text-xl leading-tight">{item}</span>
                  </li>
                ))
              }
            </ul>
          </div>

          <div>
            <p class="text-base font-semibold text-gray-900">
              Ready to turn your home’s equity into cash? <span
                class="text-[#bf9f5c]">Access up to 89.99% of your equity.</span
              >
            </p>
            <div class="mt-4">
              <img
                src={hero.src}
                alt={hero.alt}
                class="w-full rounded-3xl border border-gray-200 object-cover"
                loading="lazy"
                decoding="async"
              />
            </div>
          </div>
        </div>

        <div
          id="short-form"
          class="rounded-3xl border border-gray-200 bg-white p-6 shadow-xl scroll-mt-[100px] self-start"
        >
          <p class="text-2xl font-bold text-[#bf9f5c]">
            Please fill our short form below
          </p>
          <p class="mt-1 text-sm text-gray-600">
            Embed service placeholder — replace this block with your preferred
            form provider.
          </p>
          <div
            class="mt-4 rounded-2xl border-2 border-dashed border-gray-300 bg-gray-50 p-6 text-center text-sm text-gray-500"
          >
            <div
              class="plato-form-widget"
              data-pf-id="fr6g8ai1fed"
              data-pf-host="form.formcan.com/"
            >
            </div>
          </div>
          <p class="mt-4 text-xs text-gray-500">
            By submitting, you agree to let Cliff Mortgages contact you via
            phone, SMS, or email about your request.
          </p>
          <div class="mt-6 grid grid-cols-2 gap-4">
            <div
              class="rounded-xl border border-gray-200 px-4 py-2 text-center"
            >
              <p class="text-sm font-semibold text-gray-900">BBB Accredited</p>
              <p class="text-xs text-gray-600">A+ Rating</p>
            </div>
            <div
              class="rounded-xl border border-gray-200 px-4 py-2 text-center"
            >
              <p class="text-sm font-semibold text-gray-900">Google Reviews</p>
              <p class="text-xs text-gray-600">5.0 ★★★★★</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="bg-gray-50 py-12 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="rounded-3xl bg-white p-6 md:p-10 shadow-sm">
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h2 class="text-2xl font-semibold text-gray-900">
              Why homeowners choose this option
            </h2>
            <p class="mt-3 text-sm text-gray-600">
              This cash-out alternative mirrors the paid traffic mockup — short,
              focused, and designed to move interested homeowners directly into
              the quote flow.
            </p>
            <ul class="mt-6 space-y-3 text-sm text-gray-700">
              {
                proofPoints.map((item) => (
                  <li class="flex items-start gap-2">
                    <i class="fa-solid fa-circle-check text-[#bf9f5c] mt-1" />
                    <span>{item}</span>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="rounded-2xl border border-gray-200 bg-gray-50 p-6">
            <p
              class="text-sm font-semibold uppercase tracking-wide text-gray-500"
            >
              Prefer online guidance?
            </p>
            <h3 class="mt-2 text-2xl font-semibold text-gray-900">
              Use the quick form instead
            </h3>
            <p class="mt-2 text-sm text-gray-600">
              Tell us about your timeline, equity goals, and payment
              preferences—our team will follow up with personalized HELOC
              scenarios.
            </p>
            <a
              href="#short-form"
              class="mt-6 inline-flex w-full items-center justify-center rounded-lg bg-[#bf9f5c] px-8 py-4 text-base font-semibold text-white shadow-md transition hover:bg-[#a68a4c]"
              data-scroll-form
            >
              Check My HELOC Options
            </a>
            <p class="mt-4 text-xs text-gray-500">
              Average closing time ~20 days. No obligation to proceed. Prefer a
              call? Dial (970) 308-2540 anytime.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-[#09143e] py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div
        class="rounded-3xl border border-white/10 bg-white/5 px-6 py-10 text-center text-white"
      >
        <h2 class="text-2xl font-semibold">
          Ready to see personalized HELOC guidance?
        </h2>
        <p class="mt-3 text-sm text-gray-200">
          Share a few details and we’ll confirm your estimated rate options,
          structure, and next steps—no obligation.
        </p>
        <div class="mt-6 flex flex-wrap justify-center gap-4">
          <a
            href="#short-form"
            class="inline-flex items-center justify-center rounded-lg bg-white px-8 py-4 text-base font-semibold text-[#09143e] shadow-md transition hover:bg-gray-100"
            data-scroll-form
          >
            Check My HELOC Options
          </a>
        </div>
      </div>
    </div>
  </section>

  <script is:inline>
    if (typeof window !== "undefined") {
      const existing = document.querySelector('script[data-formcan="true"]');
      if (!existing) {
        const script = document.createElement("script");
        script.src = "//static.formcan.com/assets/dist/formbuilder.js?v=20";
        script.async = true;
        script.dataset.formcan = "true";
        document.body.appendChild(script);
      }

      const scrollTargets = document.querySelectorAll("[data-scroll-form]");
      const formAnchor = document.getElementById("short-form");
      scrollTargets.forEach((el) => {
        el.addEventListener("click", (event) => {
          if (!formAnchor) return;
          event.preventDefault();
          const top =
            formAnchor.getBoundingClientRect().top + window.scrollY - 100;
          window.scrollTo({ top, behavior: "smooth" });
        });
      });
    }
  </script>
</LandingLayout>
